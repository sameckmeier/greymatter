%header.header.header--inverted
  %div.row
    %div.small-12.medium-4.columns
      = link_to root_path do
        = image_tag 'gm_logo.png'
    %div.small-12.medium-4.columns.text-center
      %div.search
        %div.search__input_group
          %input{ type: :text, class: 'search__input_group--small', placeholder: 'SEARCH GREY MATTER'}
          %button.btn--neutral
            %i.icon.search
          %div.clearfix
    %div.small-12.medium-4.columns.text-right.login_register
      = link_to 'Login', '#', class: 'bold'
      = '/'
      = link_to 'Register', '#', class: 'bold'
