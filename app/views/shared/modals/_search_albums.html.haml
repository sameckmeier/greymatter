%div.reveal-modal#search_albums_modal.compose__modal{'data-reveal'=> true}
  = form_tag album_search_path, {method: :get} do
    %div.row.collapse.compose__row
      %div.small-1.columns
        = image_tag 'http://lorempixel.com/abstract/90/90'
      %div.small-11.columns
        %div.apply-padding-left
          %input.form__input.form__input--transparent{type: 'text', name: 'name', placeholder: 'Type an album name here'}

    %div.row.collapse
      %div.small-12.medium-6.columns.right
        %div.row.collapse
          %div.small-12.medium-6.columns.text-right
            %div.apply-padding-right
              = link_to 'Discard', 'javascript:;', {class: 'close-modal close-reveal-modal discard--link'}
          %div.small-12.medium-6.columns
            %button.btn.btn--dark_red.btn--rounded
              Search
